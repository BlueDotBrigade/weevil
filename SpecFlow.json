{
  "$schema": "https://specflow.org/specflow-config.json",
  "ide": {
    "editor": {
      "gherkinFormat": {
        "indentAndSteps": true
      }
    }
  },
  "runtime": {
    "stopAtFirstError": true,
    "missingOrPendingStepsOutcome": "Error"
  },
  "bindingCulture": {
    "language": "en-us"
  },
  "language": {
    "feature": "en-us"
  },
  "livingDocGenerator": {
    "enabled": true,
    "filePath": "TestExecution.json"
  }
}